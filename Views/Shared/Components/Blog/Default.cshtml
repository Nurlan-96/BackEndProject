@model IEnumerable<Blog>
@foreach(var blog in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-blog mb-60">
            <div class="blog-img">
                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id"><img src="~/img/blog/@blog.ImageUrl" alt="blog"></a>
                <div class="blog-hover">
                    <i class="fa fa-link"></i>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>By Alex  /  @blog.CreatedDate.ToString("dd MMM yyyy")  /  <i class="fa fa-comments-o"></i> 4</p>
                </div>
                <div class="blog-bottom">
                    <h2><a href="blog-details.html">@blog.Name</a></h2>
                    <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id">read more</a>
                </div>
            </div>
        </div>
    </div>
}