@using WebApplication1.Areas.AdminArea.ViewModels.EventVM
@model EventCreateVM
<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Event Creation</h4>
                <form asp-action="create" class="forms-sample" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div> <div class="form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" type="date" class="form-control" placeholder="Date">
                        <span class="text-danger" asp-validation-for="Date"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime"></label>
                        <input asp-for="StartTime" type="time" class="form-control" placeholder="Start Time">
                        <span class="text-danger" asp-validation-for="StartTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime"></label>
                        <input asp-for="EndTime" type="time" class="form-control" placeholder="End Time">
                        <span class="text-danger" asp-validation-for="EndTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Venue"></label>
                        <input asp-for="Venue" type="number" class="form-control" placeholder="Venue">
                        <span class="text-danger" asp-validation-for="Venue"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedSpeakerIds">Speakers</label>
                        <select asp-for="SelectedSpeakerIds" class="form-control" asp-items="ViewBag.Speakers" multiple="multiple"></select>
                        <span class="text-danger" asp-validation-for="SelectedSpeakerIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" type="file" class="form-control" placeholder="Add an Image">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}